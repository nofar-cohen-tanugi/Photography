{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@shared/*": [
        "../shared/index.ts"
      ]
    },
  },
  "include": [
    "src/api/*.ts",
    "./*.js",
    "**/*.ts",
    "test/**/*.ts",
    "src/api/index.ts",
  ],
}